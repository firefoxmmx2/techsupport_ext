<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="sysadmin" namespace="/sysadminDefault" extends="json-default">
		<!-- 用户管理 -->
		<action name="*_user" class="userManageAction" method="{1}">
			<result type="json">
				<param name="excludeproperties"> 
				.*hibernateLazyInitializer 
				</param> 
			</result>
		</action>
<!-- 		机构管理 -->
		<action name="*_departmentmanage" class="departmentManageAction" method="{1}">
			<result type="json">
				<param name="excludeProperties"> 
				.*hibernateLazyInitializer 
				</param> 
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
<!-- 		角色管理 -->
<!-- 		<action name="*_rolemanage" class="roleManageAction" method={1}> -->
<!-- 			<result type="json"></result> -->
<!-- 		</action> -->
<!-- 		系统管理 -->
		<action name="*_systemmanage" class="systemManageAction" method="{1}">
			<result type="json">
				<param name="ignoreHierarchy">false</param>
				<param name="excludeProperties"> 
				.*hibernateLazyInitializer 
				</param> 
			</result>
		</action>
		<action name="*_tree" class="treeMappingAction" method="{1}">
<!-- 			跳转机构管理界面 -->
			<result name="department">
				/basic/systemadmin/departmentManageMan.jsp
			</result>
<!-- 			跳转用户管理界面 -->
			<result name="user">
				/basic/systemadmin/userManageMan.jsp
			</result>
<!-- 			跳转角色管理界面 -->
			<result name="role">
				/basic/systemadmin/roleManageMan.jsp
			</result>
<!-- 			跳转系统管理界面 -->
			<result name="system">
				/basic/systemadmin/systemManageMan.jsp
			</result>
<!-- 			跳转到功能管理界面 -->
			<result name="function">
				/basic/systemadmin/functionManageMan.jsp
			</result>
		</action>
<!-- 		字典 -->
		<action name="*_dict" class="dictAction" method="{1}">
			<result type="json">
				<param name="excludeproperties">
					.*hibernateLazyInitializer
				</param>
			</result>
		</action>
		<!-- 字典项 -->
		<action name="*_dictItem" class="dictItemAction" method="{1}">
			<result type="json">
				<param name="excludeproperties">
					.*hibernateLazyInitializer
				</param>
			</result>
		</action>
	</package>
	
</struts>    
